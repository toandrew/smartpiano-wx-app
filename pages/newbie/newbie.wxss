/* pages/album/album.wxss */

.g-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.m-header {
  display: flex;
  flex-direction: colume;
  justify-content: flex-start;
  background: rgba(0, 0, 0, 0.4);
}

.m-header .u-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  /* height: 400rpx; */
  filter: blur(30rpx);
  z-index: -1;
}

.m-header .m-logo {
  display: flex;
  flex-direction: column;
}

.m-header .m-desc {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 70rpx 30rpx 30rpx 30rpx;
  color: #fff;
}

.m-header .m-logo image {
  width: 300rpx;
  height: 300rpx;
  padding: 70rpx 0 30rpx 30rpx;
}

.m-header .m-logo > text {
  position: relative;
  top: -15rpx;
  left: 80rpx;
  color: #fff;
  font-size: 28rpx;
  width: 200rpx;
  white-space: nowrap;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 30rpx;
  text-align: center;
}

.m-header .m-desc > text:nth-of-type(2) {
  padding-top: 20rpx;
  font-size: 30rpx;
}

.m-items {
  padding: 0 10rpx;
  background: #fff;
  height: 60vh;
}
