/* pages/album/album.wxss */
@import "/templates/score/score-item-list.wxss";

.g-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.m-header {
  display: flex;
  flex-direction: colume;
  justify-content: flex-start;
}

.m-header .u-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 400rpx;
  filter: blur(30rpx);
  z-index: -1;
}

.m-header .m-logo {
  display: flex;
  flex-direction: column;
}

.m-header .m-desc {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 70rpx 30rpx 30rpx 30rpx;
}

.m-header .m-logo > image {
  width: 300rpx;
  height: 300rpx;
  padding: 70rpx 0 30rpx 30rpx;
}

.m-header .m-logo > text {
  position: relative;
  top: -70rpx;
  left:90rpx;
  color: #fff;
  font-size: 30rpx;
}

.m-header .m-desc > text:nth-of-type(1) {
  color: #fff;
}

.m-header .m-desc > text:nth-of-type(2) {
  color: #f00;
  padding-top: 20rpx;
  font-size: 35rpx;
}

.m-items {
  padding: 0 10rpx;
}


