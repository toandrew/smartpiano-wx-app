/* pages/album/album.wxss */

.g-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.m-header {
  display: flex;
  flex-direction: colume;
  justify-content: flex-start; 
}

.m-header .m-logo {
  display: flex;
  flex-direction: column;
}

.m-header .m-desc {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.m-header .m-logo > image {
  width: 400rpx;
  height: 400rpx;
}

.m-header .m-logo > text {
  position: relative;
  top: -50rpx;
  left:100rpx;
  color: #fff;
}

.m-header .m-desc > text:nth-of-type(2) {
  color: #f00;
}

 .m-header .m-desc > text:nth-of-type(1) {
  color: #00f;
}

.m-items {
  display: flex;
  flex-direction: column;
}


