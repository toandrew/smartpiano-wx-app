/**index.wxss**/
@import "/templates/score/score-item-list.wxss";

.banner-image {
  width: 100%;
  height:300rpx;
}

.content-container {
  background-color: #f5f7f7;
}
.search-pannel {
  display: flex;
  flex-direction: row;
  background-color: #f5f7f7;
  padding: 24rpx 24rpx;
}

.search-input {
  width: 80%;
  height: 48rpx;
  padding: 16rpx 0 16rpx 32rpx;
  font-size: 30rpx;
  background-color: #fff;
  border-radius: 4px 0 0 4px;
  box-shadow: 1px 1px 6px #ecf0f0;
}

.search-button {
  width: 20%;
  margin: 0 !important;
  color: #296fd0 !important;
  background-color: #fff !important;
  border-left: 0 !important;
  border-top: 1px solid #fff !important;
  border-right: 1px solid #fff !important;
  border-bottom: 1px solid #fff !important;
  border-radius: 0 4px 4px 0;
  box-shadow: 1px 1px 6px #ecf0f0;
}

.search-button icon {
  position: absolute;
  margin: 24rpx 16rpx;
}

.top-nav {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 25rpx 0;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.top-nav-item {
  text-align: center;
}

.top-nav-item image {
  width: 64rpx;
  height: 64rpx;
}

.top-nav-item text {
  line-height: 28rpx;
  font-size: 28rpx;
}

.album-score-container {
  display: flex;
  flex-direction: column;
  align-items: baseline;
  padding: 0;
  margin: 0;
}

.album-score-title {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  background:#fff;
  margin-top: 10rpx;
}

.recommend-title {
  height: 64rpx;
  color: #000;
  font-size: 38rpx;
  line-height: 64rpx;
  padding-left: 12rpx;
  border-left: 8rpx solid #8a4aff;
}

.recommend-title-more {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #959595;
  font-size: 30rpx;
  line-height: 64rpx;
  padding-right: 20rpx;
}

