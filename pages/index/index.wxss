.album-score-collection {
  width: 100%;
  background-color: #fff;
}

.album-score-collection image {
  width: 236rpx;
  height: 236rpx;
  margin: 10rpx 0rpx 5rpx 10rpx;
}

.albums {
  display: flex;
  flex-direction: column;
}

.albums text {
  width: 236rpx;
  font-size: 24rpx;
  margin: 0rpx 0rpx 5rpx 10rpx;
}

.album-grid {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.score-lines {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

