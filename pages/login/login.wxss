.g-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: 36rpx;
}

.g-container image:nth-of-type(1) {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  padding: 0;
  margin: 0;
  z-index: -1;
}

.g-container image:nth-of-type(2) {
  width: 350rpx;
  height: 350rpx;
}

form {
  width: 100%;
}

.m-code {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 40rpx;
  border-bottom: 1rpx solid #555;
}

input {
  font-size: 30rpx;
}

.code {
  margin: 20rpx 40rpx;
  border-bottom: 1rpx solid #555;
}

.u-cbtn {
  margin: 5rpx 0 16rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 5px;
  background: rgba(0, 0, 0, 0);
}

.submit-btn {
  display: block;
  width: 91vw;
  margin: 0 auto 16px;
  font-size: 16px;
  cursor: pointer;
  line-height: 29px;
  padding: 10rpx;
  color: #fff;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 5px;
  background: rgba(0, 0, 0, 0);
}
