.g-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: 36rpx;
}

.g-container image {
  height: 300rpx;
}

form {
  width: 100%;
}

.m-phone {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

input {
  font-size: 30rpx;
}

.u-code {
  margin: 40rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.u-codebtn {
  margin: 5rpx 0 16rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 91vw;
  font-size: 36rpx;
}

form .guest-btn {
  width: 100%;
  text-align: right;
  font-size: 16px;
  color: #959595;
  background: rgba(0, 0, 0, 0);
  padding-right: 5vw;
  margin-top: 20rpx;
}

button[class="guest-btn"]::after {
  border: none;
}

.btn-hover {
  opacity: 0;
}
