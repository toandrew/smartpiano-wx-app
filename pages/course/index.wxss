/**index.wxss**/
@import "/templates/score/score-item-list.wxss";
@import "/templates/level/level.wxss";
@import "/templates/nulltip/nulltip.wxss";

swiper {
  overflow-y: scroll;
  min-height: 93vh;
}

.navbar {
  display: flex;
  height: 7vh;
  border-bottom: 1px solid #eee;
  white-space: nowrap;
}

.navbar-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #000;
  margin-bottom: -1px;
}

.navbar-text {
  display: block;
  width: 60px;
  padding: 20rpx 20rpx 10rpx 20rpx;
  margin: auto;
}

.navbar-text.active {
  border-bottom: 3px solid #8a4aff;
  color: #8a4aff;
}

.hidden {
  display: none;
}

.newbie-item {
  display: flex;
  width: 100vw;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.item-container {
  width: 100%;
  height: 100%;
}

.image-container {
  display: block;
  width: 100vw;
  height: 270rpx;
}

.image-container image {
  width: 100%;
}

.image-container .newbie-item-desc {
  position: relative;
  top: -280rpx;
  left: 0;
  height: 274rpx;
  background: rgba(0, 0, 0, 0.5);
}

.image-container .newbie-item-desc .newbie-item-desc-1 {
  display: flex;
  flex-direction: column;
  height: 270rpx;
  justify-content: center;
  align-items: center;
  color: #fff;
}
