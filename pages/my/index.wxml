<!--pages/my/index.wxml-->
<view class="container">
  <view class="user-info">
    <block wx:if="{{userInfo.avatarUrl != ''}}">
      <image src="{{userInfo.avatarUrl}}"></image>
    </block>
    <text>{{userInfo.nickName}}</text>
  </view>

  <view class="u-item" bindtap='gotoBluetoothSettings'>
    <text>蓝牙设置</text>
    <view>></view>
  </view>

  <button class="u-btn-login" hover-class="gray" type="{{bType}}" bindtap="onLogin">{{actionText}}</button>
</view>
