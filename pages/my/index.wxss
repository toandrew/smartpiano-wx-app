/* pages/my/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: #f2f2f2;
  font-size: 36rpx;
}

.u-bg {
  position: absolute;
  width: 100%;
  height: 256rpx;
  top: 0;
  left: 0;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 0rpx;
}

.user-info image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}

.user-info-name {
  display: flex;
  width: 50%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx;
  margin-left: 0rpx;
}

.u-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.u-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx 40rpx 30rpx 0;
  flex: 1;
  border-bottom: 1rpx solid #eee;
}

.icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx;
}

.u-spliter {
  margin: 20rpx;
}
