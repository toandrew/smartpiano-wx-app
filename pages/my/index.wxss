/* pages/my/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: #f2f2f2;
  font-size: 36rpx;
}

.u-bg {
  position: absolute;
  width: 100%;
  height: 256rpx;
  top: 0;
  left: 0;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 0rpx;
}

.user-avatar {
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 30rpx 40rpx 10rpx 40rpx;
  clip-path: circle(50% at center);
}

.user-info-name {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding: 0rpx;
  margin-left: 0rpx;
}

.u-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.u-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx 40rpx 30rpx 0;
  flex: 1;
  border-bottom: 1rpx solid #eee;
}

.icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx;
}

.u-spliter {
  margin: 20rpx;
}

.user-logo {
  display: flex;
  flex-direction: column;
}

.user-logo text {
  width: 180rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  padding-left: 40rpx;
}

.u-logout {
  font-size: 30rpx;
}
