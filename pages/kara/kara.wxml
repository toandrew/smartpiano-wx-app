<!--pages/kara/kara.wxml-->
<import src="/templates/grid/grid-item.wxml" />
<import src="/templates/level/level.wxml" />
<import src="/templates/nulltip/nulltip.wxml" />

<view class="g-container">
  <template is="level" data="{{levelTags : levelTags, currentLevel : currentKaraLevel}}"></template>
  <scroll-view class="item-container" scroll-y="true" bindscrolltolower="pullUpLoadLatest" hidden='{{isKaraNull}}'>
    <template is="gridItem" data="{{...karas}}" />
  </scroll-view>

  <view class="m-empty" hidden='{{!isKaraNull}}'>
    <template is="nullTip" data="{{nullTip: nullTip}}" />
  </view>
</view>